.SILENT: current-target-help
current-target-help:
	echo "watch-run 'make current-target' ./flow/"

.PHONY: current-test-pie-3d-prepare-data
current-test-pie-3d-prepare-data: BUILD_FILES="'\
  ./flow/src/components/pie-3d/prepare-data.js \
  ./flow/test-unit/components/pie-3d/draw-data-on-canvas.util.js \
  ./flow/src/utils/math.js \
  ./flow/test-unit/utils/write-to-test-diff-dir.util.js \
'"
current-test-pie-3d-prepare-data: TEST_FILES="'\
  ./flow/test-unit/components/pie-3d/prepare-data.test.js \
'"
current-test-pie-3d-prepare-data: TEST_FILES_RUN=$(subst ./flow/,./test/unit-tmp/,$(TEST_FILES))
current-test-pie-3d-prepare-data: test-unit

.PHONY: current-test-pie-3d-prepare-rim-slices-data
current-test-pie-3d-prepare-rim-slices-data: BUILD_FILES="'\
  ./flow/src/components/pie-3d/prepare-rim-slices-data.js \
  ./flow/src/components/pie-3d/prepare-data.js \
  ./flow/src/utils/math.js \
  ./flow/test-unit/components/pie-3d/draw-data-on-canvas.util.js \
  ./flow/test-unit/components/pie-3d/draw-rim-slices-data-on-canvas.util.js \
  ./flow/test-unit/utils/write-to-test-diff-dir.util.js'"
current-test-pie-3d-prepare-rim-slices-data: TEST_FILES="'\
  ./flow/test-unit/components/pie-3d/prepare-rim-slices-data.test.js'"
current-test-pie-3d-prepare-rim-slices-data: TEST_FILES_RUN =
  $(subst ./flow/src/,./test/unit-tmp/flow/src/,$(TEST_FILES))
current-test-pie-3d-prepare-rim-slices-data: test-unit

.PHONY: current-test-pie-3d-draw
current-test-pie-3d-draw: BUILD_FILES="'\
  ./flow/test-unit/utils/compare-with-looks-same.util.js \
  ./flow/test-unit/utils/write-canvas-to-test-diff-dir.util.js \
  ./flow/src/components/pie-3d/draw.js \
  ./flow/src/components/pie-3d/prepare-data.js \
  ./flow/src/components/pie-3d/prepare-rim-slices-data.js \
  ./flow/src/utils/math.js \
  ./flow/test-unit/utils/create-node-canvas-context-2d.util.js \
